{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es6",
    "alwaysStrict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "actions/*": ["newtab/actions/*"],
      "modals/*": ["newtab/components/ui/modals/*"],
      "components/*": ["newtab/components/*"],
      "constants/*": ["newtab/constants/*"],
      "containers/*": ["newtab/containers/*"],
      "models/*": ["newtab/models/*"],
      "reducers/*": ["newtab/reducers/*"],
      "resources/*": ["newtab/resources/*"],
      "selectors/*": ["newtab/selectors/*"],
      "store/*": ["newtab/store/*"],
      "styles/*": ["newtab/styles/*"],
      "utils/*": ["utils/*"]
    }
  },
  "include": ["./src/**/**/*"]
}
